@model IEnumerable<CouponDTO>
@{
    ViewData["Title"] = "CouponIndex";
}
<h1>CouponIndex</h1>
<p>
    <a asp-action="CouponCreate" class="btn btn-outline-primary">Create</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Percent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Percent)</td>
                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                <td>@Html.DisplayFor(modelItem => item.Created)</td>
                <td>
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">Details</a>
                    <a asp-action="UpdateCoupon" class="btn btn-warning" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="DeleteCoupon" class="btn btn-danger" asp-route-deleteid="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>